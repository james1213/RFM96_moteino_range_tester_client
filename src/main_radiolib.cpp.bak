void setInterruptionFlag() {
    if (!transmissionFinished) {
        Serial.print(F("SENDING TIME = "));
        Serial.print(String(micros() - sendingTime));
        Serial.println(F(" us"));
        transmissionFinished = true;
    } else {
        receivedFlag = true;
    }
}

